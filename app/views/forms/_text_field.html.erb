<%col_size ||= 'is-6'%>
<%label ||= nil%>
<%f ||= nil%>

<div class="field column <%= col_size%>">
  <%if f%>
  <%= f.label name, label, class: "label" %>
  <%= f.text_field name, class: "input" %>
  <%else%>
  <%= label_tag name, label, class: "label" %>
  <%= text_field_tag name, nil, class: "input" %>
  <%end%>
</div>